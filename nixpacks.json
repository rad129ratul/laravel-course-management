{
  "phases": {
    "setup": {
      "nixPkgs": [
        "php82",
        "php82Extensions.mbstring",
        "php82Extensions.pdo",
        "php82Extensions.tokenizer",
        "php82Extensions.xml",
        "php82Extensions.ctype",
        "php82Extensions.bcmath",
        "php82Extensions.fileinfo",
        "php82Packages.composer",
        "nodejs-18_x",
        "nodePackages.npm"
      ]
    },
    "install": {
      "cmds": [
        "composer install --no-dev --optimize-autoloader --no-interaction",
        "npm ci --no-audit",
        "npm run build"
      ]
    },
    "build": {
      "cmds": [
        "npm run build"
      ]
    }
  },
  "start": {
    "cmd": "php artisan config:clear && php artisan cache:clear && php artisan migrate --force && php artisan storage:link && php -d upload_max_filesize=100M -d post_max_size=100M -d memory_limit=512M -d upload_tmp_dir=/tmp -d sys_temp_dir=/tmp artisan serve --host=0.0.0.0 --port=$PORT"
  }
}